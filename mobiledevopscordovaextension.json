{
    "manifestVersion": 1.0,
    "id": "cordova-extension",
    "name": "Cordova Build",
    "version": "1.0.1",
    "publisher": "ms-vsclient",
    "public": true,
    "description": "Streamline CI setup for your Apache Cordova, PhoneGap, Ionic, or Cordova CLI compatible app using a set of useful pre-defined build steps.",
    "categories": [
        "Build and release"
    ],
    "visibility": [
        "Build and release"
    ],
    "tags": [
        "Cordova", "Phonegap", "Ionic", "Tools for Apache Cordova", "TACO", "Build", "Continuous Integration", "Android", "iOS", "Windows", "Windows Phone"
    ],
    "links": {
        "learn": {
            "uri": "http://go.microsoft.com/fwlink/?LinkID=691186"
        },
        "issues": {
            "uri": "http://go.microsoft.com/fwlink/?LinkID=699450"  
        },
        "support": {
            "uri": "http://go.microsoft.com/fwlink/?LinkID=699448"
        },
        "repository": {
            "uri": "http://go.microsoft.com/fwlink/?LinkID=691187"
        }
    },
    "icons": {
        "default": "docs/media/misc/cordova_logo_white_purple.png",
        "large": "docs/media/misc/cordova_logo_white_purple_large.png"
    },
    "branding": {
        "color": "#5C2D91",
        "theme": "dark"
    },
    "content":{
        "details": {
            "path": "docs/extension-overview.md"
        },
        "thirdpartynotice": {
            "path": "thirdpartynotices.txt"
        }
    },
    "files": [
        {
            "path": "Tasks/CordovaBuild"
        },
        {
            "path": "Tasks/CordovaCommand"
        },
        {
            "path": "Tasks/IonicCommand"
        }
    ],
    "contributions": [
        {
            "id": "cordovabuildtask",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
                "name": "Tasks/CordovaBuild"
            }
        },
        {
            "id": "cordovacommandtask",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
                "name": "Tasks/CordovaCommand"
            }
        },
        {
            "id": "ioniccommandtask",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
                "name": "Tasks/IonicCommand"
            }
        }
    ]
}
